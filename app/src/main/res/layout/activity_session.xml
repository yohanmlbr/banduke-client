<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground"
    tools:context=".activities.SessionActivity">

    <TextView
        android:id="@+id/textViewSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Session"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp" />


    <Button
        android:id="@+id/buttonModify"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary"
        android:text="Modifier"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="150dp"
        android:background="@color/colorPrimary">

        <TableRow>

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="Nom"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewNameDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="name"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="Durée"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewDurationDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="duration"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="Date début"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewStartTimeDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="starttime"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="Date fin"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewEndTimeDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="endtime"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/buttonGpsData"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:height="50dp"
        android:background="@color/colorPrimary"
        android:text="Données GPS"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/buttonAccData"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:height="50dp"
        android:background="@color/colorPrimary"
        android:text="Données accélération"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/buttonGyrData"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:height="50dp"
        android:background="@color/colorPrimary"
        android:text="Données gyroscope"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />


</RelativeLayout>
