<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground"
    tools:context=".activities.ProfileActivity">

    <TextView
        android:id="@+id/textViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Profil"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp" />

    <Button
        android:id="@+id/buttonActionProfile"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary"
        android:text="Modifier"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="150dp"
        android:background="@color/colorPrimary">

        <TableRow>

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="Utilisateur"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewUsernameDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="username"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewLastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="Nom"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewLastnameDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="lastname"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewFirstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="PrÃ©nom"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewFirstnameDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="firstname"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewMoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="Moto"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewMotoDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="moto"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textSessions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginVertical="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:text="Sessions"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewSessionsDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="nbsessions"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginVertical="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:text="Amis"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewFriendsDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@color/colorPrimaryBackground"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="nbamis"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
