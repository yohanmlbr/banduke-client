<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground"
    tools:context=".activities.GyrDataActivity">

    <TextView
        android:id="@+id/textViewGyrData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Gyroscope"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChartGyr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="50dp"
        android:background="@color/colorWhite"
        android:padding="5dp"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="80dp"
        android:background="@color/colorPrimary">

        <TableRow>

            <TextView
                android:id="@+id/textViewBvg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryBackground"
                android:text="Best virage gauche"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textAlignment="center"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewBvd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryBackground"
                android:paddingStart="10dp"
                android:text="Best virage droite"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textAlignment="center"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textViewBw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryBackground"
                android:paddingStart="10dp"
                android:text="Best wheeling"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textAlignment="center"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textViewBs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryBackground"
                android:paddingStart="10dp"
                android:text="Best stoppie"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textAlignment="center"
                tools:ignore="RtlSymmetry" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewBvgDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="20dp"
                android:background="@color/colorPrimaryBackground"
                android:paddingEnd="10dp"
                android:text="-"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textAlignment="center"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewBvdDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="20dp"
                android:background="@color/colorPrimaryBackground"
                android:paddingStart="10dp"
                android:text="-"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textAlignment="center"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textViewBwDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="20dp"
                android:background="@color/colorPrimaryBackground"
                android:paddingStart="10dp"
                android:text="-"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textAlignment="center"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textViewBsDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="20dp"
                android:background="@color/colorPrimaryBackground"
                android:paddingStart="10dp"
                android:text="-"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textAlignment="center"
                tools:ignore="RtlSymmetry" />

        </TableRow>

    </TableLayout>

</RelativeLayout>